

<div class="project-page">
  <div class="project-and-tasks">

    <div class="project-header">
      <h2 class="project-page-header"><strong>Project:</strong></h2>
    </div>

    <div class="project-info">
      <div class="name">
        <div id="project-name"><h2 class="project-name-h2"><%= @project.name %></h2></div>
      </div>

      <div class="summary">
        <h4 class="black-header">Project Summary</h4>
        <p id="project-summary"><%= @project.summary %></p>
      </div>

      <div class="location">
        <h4 class="black-header">Location</h4>
        <p id="location"><%= @project.location %></p>
      </div>

      <div class="available-tasks">
        <div class="avail-task-header">
          <h3 class="avail-h3">Available Tasks</h3>
        </div>

        <div class="available-tasks-list">
          <% @open.each do |task| %>
          <ul>
            <li><strong><%= task.name %></strong></li>

          <div class="claim-edit-buttons">
            <button class="btn btn-default btn-sml claim" data-id="<%= task.id %>">Claim Task</button>
              <% if current_user.id == @project.owner_id %>

            <button class="btn btn-default btn-sml edit-task" data-id="<%= task.id %>">Edit Task</button>
          </div>
              <% end %>
          </ul>
          <% end %>

        </div>

        <% if current_user.id == @project.owner_id %>
          <button class='btn btn-default btn-sml new-task-button'>Add Task</button>
        <% end %>

      </div>

      <div class="tasks-in-progress">
        <div class="avail-task-header">
          <h3 class="avail-h3">Claimed Tasks</h3>
        </div>
        <div class="claimed-tasks-list">

          <% @claimed.each do |task| %>
            <ul>
              <li><strong><%= task.name %></strong></li>
                <% if current_user.id == @project.owner_id %>
                  <button class="btn btn-default btn-sml edit-task" data-id="<%= task.id %>">Edit Task</button>
                <% end %>
            </ul>
          <% end %>

        </div>
      </div>

      <div class="completed-tasks">
        <div class="avail-task-header">
          <h3 class="avail-h3">Completed Tasks</h3>
        </div>

        <% @completed.each do |task| %>
          <ul class="completed-task-margin">
            <% if task.state == 'completed'%>
            <li><strong><%= task.name %></strong></li>
            <% end %>
          </ul>
        <% end %>
      </div>

    </div>

    <div id="new-task"></div>
    <div id="edit-form"></div>
  </div>
</div>
